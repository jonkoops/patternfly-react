{
  "compilerOptions": {
    "assumeChangesOnlyAffectDirectDependencies": true,
    "jsx": "react",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "composite": true,
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "strictNullChecks": false,
    "isolatedModules": true,
    "plugins": [
      { "transform": "transformer-cjs-imports" }
    ]
  },
  "exclude": [
    "**/**.test.tsx",
    "**/**.test.ts",
    "**/examples/**"
  ]
}
